<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="res.groups" id="group_academy_admin">
            <field name="name">Academy / Admin</field>
        </record>

        <record id="only_active_modify" model="ir.rule">
            <field name="name">Only Active Course can be modified</field>
            <field name="perm_read" eval="0"></field>
            <field name="perm_write" eval="1"></field>
            <field name="perm_create" eval="0"></field>
            <field name="perm_unlink" eval="1"></field>
            <field name="domain_force" eval="1">[('active','=','True')]</field>
            <field name="model_id" ref="model_academy_course"></field>
        </record>

    </data>
</odoo>