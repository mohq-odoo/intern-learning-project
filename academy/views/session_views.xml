<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="session_view_form">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="course_id"/>
                            </group>
                            <group>
                                <field name="instructor_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="session_view_list">
            <field name="name">academy.session.list</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <tree string="Session List">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </tree>
            </field>
        </record>

        <!-- <menuitem name="Odoo Academy" id="menu_academy" sequence="1" />
        <menuitem name="Odoo Academy" id="menu_academy_sub" parent="menu_academy" sequence="2" />
        <menuitem name="Courses" id="menu_academy_course" parent="menu_academy_sub" sequence="3" action="course_list_action" /> -->
    </data>
</odoo>